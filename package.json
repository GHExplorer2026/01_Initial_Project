{
  "name": "macro-events-deterministic-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:fixtures": "bash scripts/dev_fixtures.sh",
    "dev:live": "bash scripts/dev_live.sh",
    "build": "next build",
    "start": "node .next/standalone/server.js",
    "start:next": "next start",
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "unit": "vitest run",
    "unit:ci": "node -e \"require('fs').mkdirSync('artifacts',{recursive:true})\" && vitest run --reporter=default --reporter=junit --outputFile.junit=artifacts/vitest-unit.xml",
    "snapshot": "vitest run",
    "snapshot:ci": "node -e \"require('fs').mkdirSync('artifacts',{recursive:true})\" && vitest run --reporter=default --reporter=junit --outputFile.junit=artifacts/vitest-snapshot.xml",
    "fix:next-env": "bash scripts/normalize_next_env.sh",
    "check:next-env": "bash scripts/check_next_env.sh",
    "setup:hooks": "bash scripts/setup_git_hooks.sh",
    "check:release-gate": "scripts/check_release_gate.sh",
    "preverify": "node -e \"const [maj,min]=process.versions.node.split('.').map(Number); if(maj<20||(maj===20&&min<9)){console.error('Node >=20.9.0 required for verify. Current: '+process.versions.node); process.exit(1);}\"",
    "verify": "npm run unit && npm run snapshot && npm run lint && npm run typecheck && npm run build && npm run check:next-env",
    "verify:release": "npm run verify"
  },
  "dependencies": {
    "next": "^16.1.6",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "eslint": "8.57.1",
    "eslint-config-next": "^16.1.6",
    "typescript": "5.7.2",
    "vitest": "^4.0.18"
  }
}
